<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Your Meal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Meal Name -->
        <EditText
            android:id="@+id/etMealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meal Name (e.g. Breakfast)"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- Calories -->
        <EditText
            android:id="@+id/etCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calories"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- Protein -->
        <EditText
            android:id="@+id/etProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Protein (g)"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- Carbs -->
        <EditText
            android:id="@+id/etCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Carbohydrates (g)"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- Fats -->
        <EditText
            android:id="@+id/etFats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fats (g)"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- Date Picker -->
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date (Tap to select)"
            android:focusable="false"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="20dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveNutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Meal"
            android:backgroundTint="#2196F3"
            android:textColor="#FFF"/>

        <Button
            android:id="@+id/btnViewMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Saved Meals"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"/>


    </LinearLayout>
</ScrollView>
